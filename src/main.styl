:global
  html
    font-family Lato
    font-size 62.5%

  button
    font-size 1.5rem
    font-family Lato

  body
    font-size 1.5rem
    background #f4f4f4

  a
    text-decoration none
    cta()

.table
  table()

.breadcrumbs
  breadcrumb '\203A' 10px #666
  text-transform uppercase
  font-weight bold
  font-size 1.3rem
  padding 4px 8px

.html5Inputs
  +html5-inputs()
    input()
    &[disabled]
      input-disabled()

.input
  input(aqua, auto)
  &[disabled]
    input-disabled()
